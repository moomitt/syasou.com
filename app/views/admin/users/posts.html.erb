<div class="container-fluid admin">
  <div class="row mx-auto">
    <div class="post-container col-sm-10 col-12 mx-auto mb-3">
      <h5 class="heading mt-5 mb-3">
        <%= @user.name %>さんの 投稿一覧
      </h5>

      <div class="row pt-0 mt-0 my-3">
        <div class="col-12 text-center my-3">
          <%= link_to 'ユーザページへ', admin_user_path(@user), class: "ml-3" %>
        </div>

        <div id="tab-menu" class="col-12 text-center mt-4">
          <a href="#tab1" class="active mx-2">人気順</a>
          <span>|</span>
          <a href="#tab2" class="mx-2">新着順</a>
        </div>

        <div id="tab-contents" class="col-lg-11 col-md-8 col-sm-8 col-11 mx-auto mt-4 px-0">
          <div id="tab1" class="tab px-0">
            <%= render partial: 'admin/posts/tab', locals: { posts: @popular_posts} %>
          </div>
          <div id="tab2" class="tab px-0">
            <%= render partial: 'admin/posts/tab', locals: { posts: @new_posts} %>
          </div>
        </div>

    </div>
  </div>
</div>

<%= javascript_pack_tag 'tab' %>