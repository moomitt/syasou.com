<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
      <h4 class="mt-5 mb-4">新しい投稿</h4>

      <div class="row selected-section">
        <p class="col-12">選択中の区間</p>
        <p class="col-3 station-name text-center">
          <span id="startStationName"></span>　駅
        </p>
        <p class="col-1 text-center">↔</p>
        <p class="col-3 station-name text-center">
          <span id="endStationName"></span>  駅
        </p>
        <p class="col-3 line-name text-center">
          <span id="LineName"></span>
        </p>
      </div>

      <div class="d-inline-block mr-3">
        <%= form_with model: @post, url: posts_detail_path do |f| %>
          <%= f.hidden_field :start_station, :id => "startStationCord" %>
          <%= f.hidden_field :start_station_prefecture, :id => "startStationPrefecture" %>
          <%= f.hidden_field :latitude, :id => "startStationLatitude" %>
          <%= f.hidden_field :longitude, :id => "startStationLongitude" %>
          <%= f.hidden_field :end_station, :id => "endStationCord" %>
          <%= f.hidden_field :end_station_prefecture, :id => "endStationPrefecture" %>
          <%= f.hidden_field :line_code, :id => "LineCord" %>
          <%= f.submit 'この区間で登録', class: "btn btn-sm btn-success px-4 my-3" %>
        <% end %>
      </div>
      <button id="resetButton" class="btn btn-sm btn-secondary px-4 my-3">選択を解除</button>

      <div id="map" style="height:650px; width:100%;"></div>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'new' %>