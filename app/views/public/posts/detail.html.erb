<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
      <h4 class="mt-5 mb-4">新しい投稿</h4>

      <div class="row selected-section">
        <p class="col-12">選択中の区間</p>
        <p class="col-3 station-name text-center">
          <span id="startStationName"></span>　駅
        </p>
        <p class="col-1 text-center">↔</p>
        <p class="col-3 station-name text-center">
          <span id="endStationName"></span>  駅
        </p>
        <p class="col-3 line-name text-center">
          <span id="LineName"></span>
        </p>
      </div>

      <div id="map" style="height:300px; width:400px; margin: 30px 0;"></div>

      <div class="my-4">
        <%= form_with model: @post, url: posts_path, method: :post do |f| %>
          <%= f.hidden_field :user_id, :value => current_user.id %>
          <%= f.hidden_field :start_station, :id => "startStationCord" %>
          <%= f.hidden_field :start_station_prefecture, :id => "startStationPrefecture" %>
          <%= f.hidden_field :latitude, :id => "startStationLatitude" %>
          <%= f.hidden_field :longitude, :id => "startStationLongitude" %>
          <%= f.hidden_field :end_station, :id => "endStationCord" %>
          <%= f.hidden_field :end_station_prefecture, :id => "endStationPrefecture" %>
          <%= f.hidden_field :line_code, :id => "LineCord" %>

          <div class="imput-group-sm mb-3">
            <%= f.label :post_images, '画像を登録', class: "label-control col-12" %>
            <%= f.file_field :post_images, multiple: true, accept: "image/*",
            class: "file-control col-12" %>
          </div>

          <div class="imput-group-sm mb-3">
            <%= f.label :body, '投稿者コメント', class: "label-control" %>
            <%= f.text_area :body, class: "form-control" %>
          </div>

          <div class="imput-group-sm mb-3">
            <%= f.label :time_zone, 'おすすめ時間帯', class: "label-control" %>
            <%= f.text_area :time_zone, class: "form-control" %>
          </div>

          <div class="imput-group-sm mb-3">
            <%= f.label :spot, '近くのおすすめスポット', class: "label-control" %>
            <%= f.text_area :spot, class: "form-control" %>
          </div>

          <%= f.submit 'この内容で登録', class: "btn btn-sm btn-success mr-3 px-4" %>
          <%= link_to '区間選択にもどる', new_post_path,
          class: "btn btn-sm btn-secondary px-4" %>
        <% end %>

      </div>


    </div>
  </div>
</div>

<%= javascript_pack_tag 'detail' %>