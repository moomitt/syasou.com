<div class="container">
  <div class="row">
    <div class="col-10 mx-auto my-5">
      <h4>投稿詳細ページ</h4>
      <div id="map" style="height:500px; width:500px;"></div>
    </div>
    <div class="col-10 mx-auto my-4">
      <p>
        <span id="startStationName"></span>　駅～
        <span id="endStationName"></span>　駅間
      </p>
      <p id="LineName"></p>

      <%= form_with model: @post, url: posts_path, method: :post do |f| %>
        <%= f.hidden_field :user_id, :value => current_user.id %>

        <%= f.label :start_station, '駅１' %>
        <%= f.text_field :start_station, :id => "startStationCord", :value => @post.start_station %>
        <%= f.label :end_station, '駅２' %>
        <%= f.text_field :end_station, :id => "endStationCord", :value => @post.end_station %>
        <%= f.label :line_code, '路線' %>
        <%= f.text_field :line_code, :id => "LineCord", :value => @post.line_code  %>

        <%= f.label :body, '投稿者コメント' %>
        <%= f.text_area :body %>
        <%= f.label :time_zone, 'おすすめ時間帯' %>
        <%= f.text_area :time_zone %>
        <%= f.label :spot, '近くのおすすめスポット' %>
        <%= f.text_area :spot %>

        <%= f.submit 'この内容で登録', class: "btn btn-success px-4" %>
      <% end %>
      <button id="resetButton" class="btn btn-secondary px-4">やりなおす</button>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'detail' %>