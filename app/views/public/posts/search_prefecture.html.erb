<div class="container">
  <div class="row">
    <div class="col-10 mx-auto mt-5 mb-4">
      <h4><%= @prefecture.name %> の投稿一覧</h4>
    </div>

    <div class="col-10 mx-auto mb-4">
      <%= link_to 'エリア検索に戻る', search_area_path(@area_id), class: "ml-3" %>
    </div>

    <div class="col-10 mx-auto mt-3 mb-5">
      <div class="row">
        <% if @all_posts.present? %>
          <% @all_posts.each do |post| %>
            <%= link_to post_path(post.id), class: "col-12 my-4" do %>
              <%= post.body %>
            <% end %>
          <% end %>
        <% else %>
          <p>投稿がありません</p>
        <% end %>
      </div>
    </div>
  </div>
</div>