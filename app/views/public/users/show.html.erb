<div class="container-fluid public">
  <div class="row">
    <div class="col-12 mx-auto text-center">
      <h4 class="heading my-5">
        マイページ
      </h4>
    </div>

    <div class="col-10 mx-auto bg-light pt-4" style="max-width: 500px;">
      <div class="row my-4">
        <p class="col-10 mx-auto">画像</p>
        <% if @user.user_image.attached? %>
          <%= image_tag @user.user_image.variant(resize_to_fill: [128, 128]).processed,
          class: "rounded-circle" %>
        <% else %>
          <%= image_tag 'user', class: "rounded-circle", size: "200x200" %>
        <% end %>
      </div>

      <div class="row my-4">
        <p class="col-10 mx-auto">ニックネーム</p>
        <p class="col-10 mx-auto"><%= @user.name %></p>
      </div>

      <div class="row my-4">
        <p class="col-10 mx-auto">メールアドレス</p>
        <p class="col-10 mx-auto"><%= @user.email %></p>
      </div>

      <div class="row my-4">
        <p class="col-10 mx-auto">
          <%= link_to 'ユーザー情報を変更', users_information_edit_path %>
        </p>
      </div>

    </div>

  </div>
</div>