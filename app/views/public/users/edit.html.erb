<div class="container-fluid public">
  <div class="row">
    <div class="col-12 mx-auto text-center">
      <h4 class="heading my-5">
        マイページ
      </h4>
    </div>

    <div class="col-10 mx-auto bg-light pt-4" style="max-width: 500px;">
      <%= form_with model: @user, url: users_information_path, method: :patch do |f| %>
        <div class="row my-4">
          <h5 class="col-10 mx-auto">ユーザ情報を変更</p>
        </div>

        <div class="row input-group-sm my-4 text-danger">
          <% if @user.errors.any? %>
            <p class="col-10 mx-auto px-0">登録エラー</p>
            <ul class="col-10 mx-auto pl-4">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
        </div>

        <div class="row input-group-sm my-4">
          <label class="label-control col-10 mx-auto px-0">画像</label>
          <%= f.file_field :user_image, accept: "image/*", class: "col-10 px-0 mx-auto"  %>
        </div>

        <div class="row input-group-sm my-4">
          <label class="label-control col-10 mx-auto px-0">ニックネーム</label>
          <%= f.text_field :name, autofocus: true, autocomplete: "name",
          class: "form-control col-10 mx-auto"  %>
        </div>

        <div class="row input-group-sm my-4">
          <label class="label-control col-10 mx-auto px-0">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "form-control col-10 mx-auto"  %>
        </div>

        <div class="row my-5">
          <%= f.submit "変更を保存", class: "btn btn-sm btn-success col-10 mx-auto mb-3"  %>
          <%= link_to "キャンセル", users_mypage_path,
          class: "btn btn-sm btn-secondary col-10 mx-auto"  %>
        </div>
      <% end %>
    </div>
  </div>

  <div class-"row">
    <div class="col-10 mx-auto" style="max-width: 500px;">
      <p class="my-5">
        退会をご希望の方は
        <%= link_to 'こちら', users_confirm_path %>
      </p>
    </div>
  </div>

</div>
