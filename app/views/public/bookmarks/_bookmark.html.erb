 <% if user_signed_in? %>
  <% if post.bookmarked_by?(current_user) %>
    <p>
      <%= link_to post_bookmarks_path(post.id), method: :delete, remote: true do %>
        <i class="fas fa-star" style="color: #CFB96C;"></i>
        <%= post.bookmarks.count %>
      <% end %>
    </p>
  <% else %>
    <p>
      <%= link_to post_bookmarks_path(post.id), method: :post, remote: true do %>
        <i class="fas fa-star" style="color: #a9a9a9;"></i>
        <%= post.bookmarks.count %>
      <% end %>
    </p>
  <% end %>
<% elsif admin_signed_in? %>
  <p>
    <i class="fas fa-star" style="color: #a9a9a9;"></i>
    <%= post.bookmarks.count %>
  </p>
<% else %>
  <a href="javascript:void(0)" class="modal-open">
    <i class="fas fa-star" style="color: #a9a9a9;"></i>
    <%= post.bookmarks.count %>
  </a>
<% end %>