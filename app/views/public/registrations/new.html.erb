<div class="container-fluid public">
  <div class="row">

    <div class="input-container col-md-10 col-10 mx-auto mb-5">
      <h4 class="heading my-5 text-center">
        新規登録
      </h4>

      <%= form_with model: @user, url: user_registration_path do |f| %>
        <div class="row input-group-sm mx-3 text-danger">
          <% if @user.errors.any? %>
            <p class="col-12 mb-2"><strong>登録エラー</strong></p>
            <ul class="col-12">
              <% @user.errors.full_messages.each do |message| %>
                <li>
                  <i class="fas fa-exclamation-circle mr-1"></i>
                  <%= message %>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>

        <div class="row input-group-sm mb-3">
          <label class="label-control col-10 mx-auto px-0">
            <span class="presence-required">必須</span>
            ニックネーム<small>（2～10文字）</small>
          </label>
          <%= f.text_field :name, autofocus: true, autocomplete: "name",
          class: "form-control col-10 mx-auto"  %>
        </div>

        <div class="row input-group-sm my-3">
          <label class="label-control col-10 mx-auto px-0">
            <span class="presence-required">必須</span>
            メールアドレス
          </label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "form-control col-10 mx-auto"  %>
        </div>

        <div class="row input-group-sm my-3">
          <label class="label-control col-10 mx-auto px-0">
            <span class="presence-required">必須</span>
            パスワード
            <% if @minimum_password_length %>
              <small>（<%= @minimum_password_length %> 文字以上）</small>
            <% end %>
          </label>
          <%= f.password_field :password, autocomplete: "new-password",
          class: "form-control col-10 mx-auto"  %>
        </div>

        <div class="row input-group-sm my-3">
          <label class="label-control col-10 mx-auto px-0">
            <span class="presence-required">必須</span>
            パスワード<small>（確認用）</small>
          </label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: "form-control col-10 mx-auto"  %>
        </div>

        <div class="row my-5">
          <%= f.submit "入力した情報で登録", class: "btn btn-sm btn-accent col-10 mx-auto"  %>
        </div>
      <% end %>

      <div class="input-container-accent mx-auto my-4 py-2 px-3 text-center">
        <h6 class="my-4">
          会員登録がお済みの方
        </h6>
        <p class="my-3">
          <%= link_to 'ログインはこちら', new_user_session_path %>
        </p>
      </div>
    </div>

  </div>
</div>





